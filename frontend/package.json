{
  "name": "tp-frontend",
  "version": "2.0.0-alpha.4",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "format": "prettier --write  **/*.{ts|tsx}",
    "codegen:prepare": "apollo service:download --endpoint http://localhost:4000",
    "codegen:generate": "apollo client:codegen --target=typescript --localSchemaFile schema.json --addTypename --includes=\"src/**/*.{ts,graphql}\"",
    "codegen": "yarn run codegen:prepare && yarn run codegen:generate"
  },
  "dependencies": {
    "apollo-boost": "^0.1.16",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.7",
    "apollo-link-context": "^1.0.10",
    "apollo-link-error": "^1.1.5",
    "apollo-link-http": "^1.5.5",
    "apollo-link-state": "^0.4.2",
    "apollo-upload-client": "^9.0.0",
    "babel-plugin-styled-components": "^1.9.2",
    "cross-fetch": "^2.1.0",
    "downshift": "^3.1.2",
    "express": "^4.15.3",
    "formik": "^1.3.1",
    "graphql": "^14.0.2",
    "polished": "^2.2.0",
    "react": "^16.6.3",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.5.2",
    "react-router-dom": "^4.3.1",
    "styled-components": "^3.4.9",
    "yup": "^0.26.0"
  },
  "devDependencies": {
    "@types/apollo-upload-client": "^8.1.1",
    "@types/enzyme": "^3.1.14",
    "@types/express": "^4.0.35",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^23.0.1",
    "@types/node": "^8.0.53",
    "@types/prop-types": "^15.5.3",
    "@types/react": "16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-router": "^4.4.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack-env": "^1.13.2",
    "@types/yup": "^0.24.9",
    "apollo": "^2.1.3",
    "babel-plugin-transform-react-stateless-component-name": "^1.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "jest-styled-components": "^6.2.1",
    "prettier": "^1.14.3",
    "raf": "^3.4.0",
    "razzle": "^2.4.0",
    "razzle-plugin-typescript": "^2.4.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "4.4.1",
    "tslint": "5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.1.1",
    "typescript-styled-plugin": "^0.11.0"
  },
  "resolutions": {
    "@types/graphql": "14.0.1",
    "apollo/graphql": "14.0.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileMock.js",
      "\\.(css|less)$": "<rootDir>/config/jest/styleMock.js",
      "^sc$": "<rootDir>/src/styles"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
